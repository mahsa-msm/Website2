@using DataLayer.Entities
@{
    IEnumerable<About> Aboutmodel = ViewData["About"] as IEnumerable<About>;
    IEnumerable<FooterPicture> footerPicturesmodel = ViewData["FooterPicture"] as IEnumerable<FooterPicture>;
}


<div id="Footer">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-xl-4 item">
                @{ if (Aboutmodel.Count() != 0)
                    {
                        var item = Aboutmodel.First();
                        <h1>@item.Titel</h1>
                        @item.Text
                    }
                }
                <form>
                    <input type="email" name="email" placeholder="Email Address" class="subscribe" required>
                    <input type="submit" value="Submit" class="subscribe-btn">
                </form>
            </div>
            <div class="col-md-4 col-xl-4 item">

            </div>
            <div class="col-md-4 col-xl-4 ">
                <div class="FooterPic">

                    <div class="imageGallery">
                        @foreach (var item in footerPicturesmodel)
                        {
                            <a href="~/img/@item.ImageUrl"><img src="~/img/@item.ImageUrl" alt="@item.ImageAlt" /></a>
                        }
                    </div>


                </div>

            </div>
        </div>
    </div>

</div>